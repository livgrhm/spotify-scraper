extends layout

block content
  div(class='auth jumbotron')
    a#title(class='h1' href='#' target='_blank') title
    p(class='lead') You have now authenticated Spotify. Download your playlists below.
    p
      a#scrape(class='btn btn-lg btn-warning') Scrape my Playlists
  div(class='unauth jumbotron')
    h1= title
    p(class='lead') Welcome to #{title}
    p
      a(class='btn btn-lg btn-success' href='/auth') Log in with Spotify
  div(class='row marketing')
    div(class='col-md-12')
      p#playlists <!-- Playlist placeholder -->
